---
type Testimonial = {
  quote: string;
  name: string;
  role: string;
  initials: string;
};

const testimonials: Testimonial[] = [
  {
    quote:
      "Elemental transformó completamente nuestra presencia digital. Su equipo entendió nuestras necesidades y entregó resultados excepcionales.",
    name: "Juan Pérez",
    role: "CEO, TechStartup",
    initials: "JP",
  },
  {
    quote:
      "La implementación de IA en nuestros procesos redujo los tiempos de operación en un 40%. Increíble trabajo del equipo de Elemental.",
    name: "Laura Sánchez",
    role: "Directora de Operaciones",
    initials: "LS",
  },
  {
    quote:
      "Profesionalismo, creatividad y resultados. Elemental es el partner tecnológico que toda empresa necesita para crecer.",
    name: "Miguel Torres",
    role: "Fundador",
    initials: "MT",
  },
];
---
<section id="testimonios" class="mt-20">
  <div class="grid mx-auto px-0 md:w-full lg:w-8/12 md:px-10 text-center">
    <h2 class="text-[#13daec] text-xl md:text-3xl lg:text-3xl">TESTIMONIOS</h2>
    <h2 class="text-4xl px-10 py-4 font-bold md:text-6xl lg:text-6xl">
      Lo que dicen <span
        class="bg-linear-to-r from-cyan-400 to-purple-500 bg-clip-text text-transparent"
        >nuestros clientes</span
      >
    </h2>
  </div>
  <section class="w-full px-4 py-12">
  <div class="mx-auto max-w-7xl">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {
        testimonials.map((t) => (
          <article
            class="group relative rounded-3xl border border-white/10
                   bg-linear-to-b from-[#0b1220] to-[#070c15]
                   p-7 sm:p-8 shadow-2xl"
          >
            <!-- glow sutil -->
            <div class="pointer-events-none absolute inset-0 rounded-3xl bg-linear-to-br from-cyan-400/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition"></div>

            <!-- icon comillas -->
            <div class="relative">
              <div
                class="w-14 h-14 rounded-2xl
                       bg-linear-to-br from-[#0f172a] via-[#111827] to-[#1e293b]
                       flex items-center justify-center
                       shadow-lg shadow-cyan-500/10"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="none">
                  <path d="M10 11H7a3 3 0 0 0-3 3v3h6v-6Zm10 0h-3a3 3 0 0 0-3 3v3h6v-6Z" fill="#13daec"/>
                  <path d="M10 11V7a3 3 0 0 0-3-3H4v3h3v4h3Zm10 0V7a3 3 0 0 0-3-3h-3v3h3v4h3Z" fill="#13daec" opacity="0.5"/>
                </svg>
              </div>
            </div>

            <!-- quote -->
            <p class="relative mt-8 text-white/90 italic leading-relaxed text-lg">
              “{t.quote}”
            </p>

            <!-- footer -->
            <div class="relative mt-10 flex items-center gap-4">
              <!-- avatar iniciales -->
              <div class="relative">
                <div class="absolute -inset-3 rounded-full bg-cyan-400/10 blur-xl"></div>
                <div
                  class="relative w-14 h-14 rounded-full
                         bg-linear-to-br from-cyan-400/25 via-sky-500/15 to-purple-500/25
                         ring-1 ring-white/10
                         flex items-center justify-center"
                >
                  <span class="text-cyan-300 font-bold">{t.initials}</span>
                </div>
              </div>

              <div class="leading-tight">
                <p class="text-white font-semibold text-lg">{t.name}</p>
                <p class="text-[#94a3b8]">{t.role}</p>
              </div>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
</section>