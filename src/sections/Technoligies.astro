---
type Tech = {
  short: string;   // "Re"
  name: string;    // "React"
  tag: string;     // "Frontend"
};

const techs: Tech[] = [
  { short: "Re", name: "React", tag: "Frontend" },
  { short: "Ne", name: "Next.js", tag: "Framework" },
  { short: "No", name: "Node.js", tag: "Backend" },
  { short: "Ty", name: "TypeScript", tag: "Language" },
  { short: "Fl", name: "Flutter", tag: "Mobile" },
  { short: "Py", name: "Python", tag: "AI/ML" },
  { short: "AW", name: "AWS", tag: "Cloud" },
  { short: "Po", name: "PostgreSQL", tag: "Database" },
  { short: "Fi", name: "Figma", tag: "Design" },
  { short: "Te", name: "TensorFlow", tag: "AI" },
];
---

<section id="tecnologias" class="mt-20">
  <div class="grid mx-auto px-0 md:w-full lg:w-8/12 md:px-10 text-center">
    <h2 class="text-[#13daec] text-xl md:text-3xl lg:text-3xl">TECNOLOGÍAS</h2>
    <h2 class="text-4xl px-10 py-4 font-bold md:text-6xl lg:text-6xl">
      Stack tecnológico <span
        class="bg-linear-to-r from-cyan-400 to-purple-500 bg-clip-text text-transparent"
        >de vanguardia</span
      >
    </h2>
    <p class="text-xl md:text-2xl lg:text-2xl px-12 text-[#94a3b8]">
      Utilizamos las mejores herramientas y tecnologías para construir soluciones robustas y escalables.
    </p>
  </div>
  
<section class="w-full px-4 py-10">
  <div class="mx-auto max-w-7xl">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-5 lg:gap-6">
      {
        techs.map((t) => (
          <div
            class="group rounded-2xl border border-white/10
                   bg-lineaar-to-b from-[#0b1220] to-[#070c15]
                   px-5 py-4
                   shadow-2xl
                   hover:border-white/20 transition"
          >
            <div class="flex items-center gap-4">
              <!-- icon box -->
              <div class="relative">
                <div class="absolute -inset-2 rounded-2xl bg-cyan-400/10 blur-xl opacity-0 group-hover:opacity-100 transition"></div>
                <div
                  class="relative w-14 h-14 rounded-2xl
                         bg-linear-to-br from-[#0f172a] via-[#111827] to-[#2b1f47]
                         flex items-center justify-center
                         shadow-lg shadow-cyan-500/10"
                >
                  <span class="text-cyan-300 font-bold text-lg">{t.short}</span>
                </div>
              </div>

              <!-- text -->
              <div class="leading-tight">
                <p class="text-white font-semibold text-lg">{t.name}</p>
                <p class="text-[#94a3b8] text-sm">{t.tag}</p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
</section>