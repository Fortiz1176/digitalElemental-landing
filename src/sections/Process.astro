---
import Card from "../components/Card.astro";

type ProcessTypes = {
  title: string;
  content: string;
  icon: string;
};
let ContentCard: ProcessTypes[] = [
  {
    title: "Análisis",
    content:
      "Entendemos tu negocio, objetivos y desafíos para definir la mejor estrategia.",
